<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater
 name="money_tracker"
 help_topic="fs_tip_tracker"
 title="Money Tracker"
 width="200"
 height="200"
 min_width="175"
 min_height="175"
 single_instance="true"
 save_rect="true"
 can_resize="true"
 can_minimize="true"
 can_close="true"
 can_drag_on_left="false">
	<name_list
	 draw_heading="true"
	 follows="all"
	 bottom="-45"
	 layout="topleft"
	 left="4"
	 top="1"
	 sort_column="0"
	 sort_ascending="true"
	 name="payment_list"
	 draw_stripes="true"
	 multi_select="true"
	 name_column_index="1"
	 right="-1">
		<name_list.columns
		 name="time"
		 label="Time"
		 width="50"/>
		<name_list.columns
		 name="name"
		 label="Name"/>
		<name_list.columns
		 name="amount"
		 label="Amount"
		 width="63"/>
	</name_list>
	<check_box
	 control_name="FSAlwaysTrackPayments"
	 follows="left|right|bottom"
	 height="16"
	 label="Track when closed"
	 layout="topleft"
	 name="FSAlwaysTrackPayments"
	 tool_tip="Always track payments, even if the money tracker is closed."
	 left="4"
	 right="-4"/>
	<button
	 top_pad="1"
	 name="Clear"
	 label="Clear"
	 font="SansSerif"
	 mouse_opaque="true"
	 height="20"
	 width="192"
	 left="4"
	 follows="left|right|bottom"/>
</floater>
